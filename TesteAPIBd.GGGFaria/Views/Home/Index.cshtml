@{
    ViewBag.Title = "Home Page";
}
<h2>Posts</h2>

@using (Html.BeginForm("CreatePost", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <input type="number" name="Id" class="form-control" />
        </div>

        <div class="col-md-12">
           <button type="submit" class="btn btn-default">Enviar</button>
        </div>
    </div>
}

